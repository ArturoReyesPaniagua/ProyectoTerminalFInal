# Variables de entorno para ASECGC Backend

# Configuración del servidor
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambialo_en_produccion
JWT_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_PRIVATE_KEY_ID=tu-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu-private-key-aqui\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-proyecto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=tu-client-id

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logs
LOG_LEVEL=info

# Configuración de email (opcional, para notificaciones)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=tu-api-key-de-email
EMAIL_FROM=noreply@asecgc.com

# Configuración de almacenamiento (opcional)
STORAGE_PROVIDER=firebase
STORAGE_BUCKET=tu-bucket-de-firebase

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_muy_seguro

# URLs de servicios externos (opcional)
EXTERNAL_API_URL=https://api.ejemplo.com
EXTERNAL_API_KEY=tu-api-key-externa

# Configuración de base de datos de respaldo (opcional)
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Configuración de monitoreo (opcional)
MONITORING_ENABLED=false
MONITORING_API_KEY=tu-api-key-de-monitoreo

# Configuración de desarrollo
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false